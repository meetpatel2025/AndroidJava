<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/layout_with_intent_app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/linearLayoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="Linear Layouot"
        app:layout_constraintEnd_toEndOf="@+id/appTitle"
        app:layout_constraintStart_toStartOf="@+id/appTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/relativeLayoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Relative Layout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutBtn"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBtn" />

    <Button
        android:id="@+id/constraintLayoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Constraint Layout"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayoutBtn"
        app:layout_constraintStart_toStartOf="@+id/relativeLayoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutBtn" />

    <Button
        android:id="@+id/implicitContentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Google"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayoutBtn"
        app:layout_constraintStart_toStartOf="@+id/constraintLayoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutBtn" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="monospace"
        android:text="Layouts with Intents"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/explicitIntentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Explicit Intent"
        app:layout_constraintEnd_toEndOf="@+id/implicitContentBtn"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/implicitContentBtn"
        app:layout_constraintTop_toBottomOf="@+id/implicitContentBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>