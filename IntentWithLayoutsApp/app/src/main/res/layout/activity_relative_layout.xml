<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/relative_layout_bg"
    android:layout_height="match_parent"
    tools:context=".RelativeLayoutActivity">

    <TextView
        android:id="@+id/relativeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:fontFamily="monospace"
        android:text="Welcome to Relative Layout"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeTitle"
        android:layout_margin="12dp"
        android:text="TextView-1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_margin="12dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/txt1"
        android:text="TextView-2"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:id="@+id/txt3"
        android:layout_margin="12dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/txt2"
        android:text="TextView-3"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt5"
        android:id="@+id/txt6"
        android:layout_margin="12dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/txt5"
        android:text="TextView-6"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"
        android:id="@+id/txt4"
        android:layout_margin="12dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/txt3"
        android:text="TextView-4"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt4"
        android:id="@+id/txt5"
        android:layout_margin="12dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/txt4"
        android:text="TextView-5"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt6"
        android:id="@+id/txt7"
        android:layout_margin="12dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/txt4"
        android:text="TextView-7"
        android:textSize="16sp" />
</RelativeLayout>